<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.keshe.dao.AdminDAO">
    <resultMap id="adminResultMap" type="com.keshe.dataobject.Admin">
        <id column="adminId" property="adminId"/>
        <result column="adminName" property="adminName"/>
        <result column="adminPassword" property="adminPassword"/>
    </resultMap>

    <insert id="addAdmin" parameterType="com.keshe.dataobject.Admin">
        insert into `admin` values (#{adminId},#{adminName},#{adminPassword})
    </insert>

    <delete id="deleteAdmin">
        delete from `admin` where adminId=#{adminId}
    </delete>

    <select id="getAdmin" resultMap="adminResultMap">
        select * from `admin` where adminId=#{adminId}
    </select>

    <update id="updatePassword">
        update `admin` set adminPassword=#{newPassword} where adminId=#{adminId}
    </update>
</mapper>